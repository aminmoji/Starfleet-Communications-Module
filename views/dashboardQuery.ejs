                    <div class="query-div">
                        <ul class="list-group">
                            <% if (users.length) { %>
                                <% for (let i = 0; i < users.length; i++) { %>
                                <a href="">
                                    <li class="user-list" data-id="<%= users[i]["_id"] %>">
                                    <img src="<%='http://127.0.0.1:3000/' + users[i]['image']%>" alt="<%= users[i]["_id"] %>">
                                    <%= users[i]['rank'] %> <%= users[i]['lastname'] %>
                                    </li>
                                </a>
                            <%if (users[i]["is_online"] == 1) {%>
                                <sup class="online-status" id="<%= users[i]["_id"] %>">(Online)</sup>
                            <%} else {%>
                                <sup class="offline-status" id="<%= users[i]["_id"] %>">(Offline)</sup>
                            <%}};}%>
                        </ul>
                    </div>
                    <div class="chat-section">
                            <div id="chat-container">
                            
                            </div>
                            <form action="" id="chat-form">
                                <input type="text" name="message" placeholder="Enter Message" id="message">    
                                <input type="submit" value="Send Message">
                            </form>
                    </div>


                    <script>
        
                        var sender_id = "<%= user._id %>";
                        var receiver_id;
                        var socket = io("/user-namespace", {
                            auth: {
                                token: "<%= user._id %>",
                            }
                        });
                
                        $(document).ready(function() {
                            $('.user-list').click(function() {
                               var userId = $(this).attr("data-id");
                               receiver_id = userId;
                                $('.start-head').hide();
                                $('.chat-section').show();
                            })
                        })
                        
                        //Update user connection status
                
                        socket.on("getOnlineUser", (data) => {
                            $("#"+data.user_id+"-status").text("Online");
                            $("#"+data.user_id+"-status").removeClass("offline-status");
                            $("#"+data.user_id+"-status").addClass("online-status");
                        })
                
                        socket.on("getOfflineUser", (data) => {
                            $("#"+data.user_id+"-status").text("Offline");
                            $("#"+data.user_id+"-status").removeClass("online-status");
                            $("#"+data.user_id+"-status").addClass("offline-status");
                        })
                         
                        // save chat
                        $("#chat-form").submit((e) => {
                            e.preventDefault();
                            
                            let message = $("#message").val();
                            $.ajax({
                                url: "/save-chat",
                                type: "POST",
                                data: { sender_id:sender_id, 
                                    receiver_id: receiver_id, 
                                    message: message 
                                },
                                success: (response) => {
                                    if (response.success) {
                                        console.log(response);
                                        $("#message").val('');
                                        let chat = response.data.message;
                                        let html =` 
                                            <div class="current-user-chat">
                                                <h5>`+chat+`</h5> 
                                            </div>`;
                                        $("#chat-container").append(html);
                                        socket.emit("newChat", response.data);
                                    } else {
                                        alert(response.msg)
                                    }
                                }
                            })
                        })
                
                            socket.on("loadNewChat", (data) => {
                                let html = ` 
                                            <div class="distance-user-chat">
                                                <h5>`+data.message+`</h5> 
                                            </div>`;
                                            $("#chat-container").append(html);
                  })
